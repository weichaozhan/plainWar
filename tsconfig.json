{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["@types", "./node_modules/@types"],
    "jsx": "react"
  },
  "include": [
    "src", "@types", "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
